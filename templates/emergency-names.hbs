<form class="names-module-form emergency-names-container">
  {{#if isLoading}}
    <div class="names-module-section emergency-loading">
      <i class="fas fa-spinner fa-spin"></i>
      <p>{{localize "names.loading-data"}}</p>
    </div>
  {{else}}
    <div class="names-module-section emergency-content">
      <div class="emergency-title-header">
        <h3>{{localize "names.emergency.title"}}</h3>
        <button type="button" id="emergency-history-btn" class="emergency-history-icon" title="{{localize 'names.history.open'}}">
          <i class="fas fa-history"></i>
        </button>
      </div>
      <div class="emergency-header">
        <p>{{localize "names.emergency.description"}}</p>
      </div>

      <div class="emergency-species-filter">
        <div class="species-filter-header">
          <span class="species-filter-label">{{speciesFilterLabel}} <span class="species-filter-count">{{speciesFilterCount}}</span></span>
          <button type="button" class="species-filter-toggle" title="{{localize 'names.emergency.speciesFilterExpanded'}}">
            <i class="fas fa-chevron-down"></i>
          </button>
        </div>
        <div class="species-filter-content">
          <div class="species-filter-actions">
            <button type="button" class="species-filter-action" data-action="select-all">
              {{localize "names.emergency.selectAll"}}
            </button>
            <button type="button" class="species-filter-action" data-action="select-humans">
              {{selectSingleLabel}}
            </button>
          </div>
          <div class="species-pills-container">
            {{#each availableSpecies}}
              <button type="button" class="species-pill {{#if this.enabled}}active{{/if}}" data-species="{{this.code}}">
                {{this.displayName}}
              </button>
            {{/each}}
          </div>
        </div>
      </div>

      <div class="emergency-names-grid">
        {{#each emergencyNames}}
          <div class="emergency-name-pill" data-name="{{this.name}}" title="{{localize 'names.emergency.clickToCopy'}}">
            <div class="name-text">{{this.name}}</div>
            <div class="species-text">{{this.displaySpecies}}</div>
          </div>
        {{/each}}
      </div>
      
      <div class="emergency-controls">
        <button type="button" class="emergency-reroll-btn">
          <i class="fas fa-dice"></i>
          {{localize "names.emergency.reroll"}}
        </button>
        <button type="button" class="emergency-open-generator-btn">
          <i class="fas fa-cog"></i>
          {{localize "names.emergency.openGenerator"}}
        </button>
      </div>
    </div>
  {{/if}}
</form>